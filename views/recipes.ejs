<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipes from <%= continent %> - <%= country %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="recipe-title">Recipes from <%= country %>, <%= continent %></h1>

        <!-- ✅ Recipe Grid -->
        <div class="recipe-grid">
            <% if (recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="recipe-card">
                        <a href="<%= recipe.url %>">
                            <img src="<%= recipe.image %>" alt="<%= recipe.title %>" onerror="this.src='/recipes429/images/default.jpg'">
                            <h3 class="recipe-title"><%= recipe.title %></h3>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No recipes found for <%= country %>.</p>
            <% } %>
        </div>

        <!-- ✅ Back Button -->
        <button onclick="goBack()">⬅ Back</button>
    </div>

    <script>
        function goBack() {
            window.history.back();
        }
    </script>

</body>
</html>

