<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meal Planning</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            display: flex;
            font-family: Arial, sans-serif;
        }
       /* Sidebar for checkboxes */
       .sidebar {
            width: 20%;
            padding: 20px;
            background: rgba(50, 50, 50, 0.8); /* ‚úÖ Dark gray with 80% opacity */
            border-right: 2px solid #ddd;
            height: 100vh;
            overflow-y: auto;
        }
        .sidebar h2 {
            font-size: 18px;
            margin-bottom: 10px;
        }
        .sidebar label {
            display: block;
            margin: 5px 0;
        }
        .sidebar select {
            width: 100%;
            padding: 5px;
            margin-top: 5px;
            background: rgba(255, 255, 255, 0.8);
            border: none;
            color: black;
        }
        .dropdown-content {
            display: none;
            margin-top: 5px;
            padding-left: 10px;
        }
        .show {
            display: block;
        }
        /* Main content */
        .content {
            width: 80%;
            padding: 20px;
        }
        /* Grocery List Input */
        .input-box {
            width: 100%;
            height: 80px;
            padding: 10px;
            font-size: 16px;
            background: rgba(50, 50, 50, 0.8);
            border: none;
            color: white;
            outline: none;
            margin-bottom: 10px;
            resize: none; /* Prevent resizing */
        }
        /* Recipes Section */
        .recipe-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }
        .recipe-card {
            width: 30%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #000;
            text-align: center;
        }
        .recipe-card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .recipe-card h3 {
            font-size: 18px;
            margin-top: 5px;
        }
    </style>
</head>
<body>

    <!-- Sidebar with Checkboxes -->
    <div class="sidebar">
        <h2>Choose Ingredients</h2>
        <form id="ingredient-form">
            <h3>Powders</h3>
            <label><input type="checkbox" name="ingredients" value="Salt"> Salt</label>
            <label><input type="checkbox" name="ingredients" value="Sugar"> Sugar</label>
            <label><input type="checkbox" name="ingredients" value="Black Pepper"> Black Pepper</label>
            <label><input type="checkbox" name="ingredients" value="Garlic Powder"> Garlic Powder</label>
            <label><input type="checkbox" name="ingredients" value="Onion Powder"> Onion Powder</label>
            
            <!-- ‚úÖ Multi-Select Dropdown for Powders -->
            <button type="button" class="dropdown-button" onclick="toggleDropdown('powders-dropdown')">More Options ‚¨á</button>
            <div id="powders-dropdown" class="dropdown-content">
                <label><input type="checkbox" class="dropdown-checkbox" value="Chili Powder"> Chili Powder</label>
                <label><input type="checkbox" class="dropdown-checkbox" value="Cumin Powder"> Cumin Powder</label>
                <label><input type="checkbox" class="dropdown-checkbox" value="Turmeric Powder"> Turmeric Powder</label>
            </div>

            <h3>Fresh Seasonings</h3>
            <label><input type="checkbox" name="ingredients" value="Green Onion"> Green Onion</label>
            <label><input type="checkbox" name="ingredients" value="Garlic"> Garlic</label>
            <label><input type="checkbox" name="ingredients" value="Thyme"> Thyme</label>

            <h3>Hybrid Seasonings</h3>
            <label><input type="checkbox" name="ingredients" value="Old Bay Seasoning"> Old Bay Seasoning</label>
            <label><input type="checkbox" name="ingredients" value="Cajun Seasoning"> Cajun Seasoning</label>

            <h3>Sauces & Condiments</h3>
            <label><input type="checkbox" name="ingredients" value="Ketchup"> Ketchup</label>
            <label><input type="checkbox" name="ingredients" value="BBQ Sauce"> BBQ Sauce</label>
            <label><input type="checkbox" name="ingredients" value="Soy Sauce"> Soy Sauce</label>
            <label><input type="checkbox" name="ingredients" value="Worcestershire Sauce"> Worcestershire Sauce</label>
        </form>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h1>Meal Planning</h1>

        <!-- Grocery List Input -->
        <h2>Enter the Ingredients from Your Fridge or Grocery Shopping</h2>
        <label for="protein-input">Proteins:</label>
        <textarea id="protein-input" class="input-box" placeholder="Enter proteins (e.g., Chicken, Beef, Fish)"></textarea>

        <label for="vegetable-input">Vegetables:</label>
        <textarea id="vegetable-input" class="input-box" placeholder="Enter vegetables (e.g., Carrot, Broccoli)"></textarea>

        <label for="other-input">Other Ingredients:</label>
        <textarea id="other-input" class="input-box" placeholder="Enter other ingredients (e.g., Spices, Condiments)"></textarea>

        <!-- Button to Find Recipes -->
        <button onclick="findMealPlan()">Find Recipes</button>

        <!-- Matched Recipes -->
        <h2>Matched Recipes</h2>
        <div class="recipe-grid" id="recipe-results">
            <!-- Recipes will be dynamically inserted here -->
        </div>
    </div>

    <script>
        function toggleDropdown(id) {
            document.getElementById(id).classList.toggle("show");
        }

        function cleanAndSplitInput(input) {
        return input
            .trim()
            .split(/[\n,;|]+/)
            .map(item => item.trim())
            .filter(item => item.length > 0);
    }

    async function findMealPlan() {
        const proteins = cleanAndSplitInput(document.getElementById("protein-input").value);
        const vegetables = cleanAndSplitInput(document.getElementById("vegetable-input").value);
        const others = cleanAndSplitInput(document.getElementById("other-input").value);

        const sidebarIngredients = Array.from(document.querySelectorAll("input[name='ingredients']:checked"))
            .map(checkbox => checkbox.value);

        if (!proteins.length) {
            alert("Please enter at least one protein.");
            return;
        }

        const requestData = {
            proteins,
            vegetables,
            others,
            sidebarIngredients
        };

        console.log("üîç Sending Meal Plan Request:", requestData);

        try {
            const response = await fetch("/find-meal-plan", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(requestData)
            });

            const groupedResults = await response.json();
            console.log("‚úÖ Received Grouped Results:", groupedResults);

            const recipeContainer = document.getElementById("recipe-results");
            recipeContainer.innerHTML = "";

            Object.keys(groupedResults).forEach(proteinGroup => {
                const section = document.createElement("div");
                section.className = "protein-category";
                section.innerHTML = `<h2>${proteinGroup} Recipes</h2>`;

                const grid = document.createElement("div");
                grid.className = "recipe-grid";

                groupedResults[proteinGroup].forEach(recipe => {
                    const recipeCard = document.createElement("div");
                    recipeCard.className = "recipe-card";
                    recipeCard.innerHTML = `
                        <a href="${recipe.url}">
                            <img src="${recipe.image}" alt="${recipe.title}" onerror="this.src='/recipes429/images/default.jpg'">
                            <h3>${recipe.title}</h3>
                        </a>
                    `;
                    grid.appendChild(recipeCard);
                });

                section.appendChild(grid);
                recipeContainer.appendChild(section);
            });
        } catch (error) {
            console.error("‚ùå Error fetching meal plan results:", error);
        }
    }
    </script>

</body>
</html>
