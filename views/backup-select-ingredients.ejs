    <script>
        async function findRecipes() {
            const form = document.getElementById('ingredient-form');
            const selectedIngredients = Array.from(form.elements['ingredients'])
                .filter(input => input.checked)
                .map(input => input.value);

            if (selectedIngredients.length === 0) {
                alert("Please select at least one ingredient.");
                return;
            }

            const response = await fetch('/find-recipes', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ ingredients: selectedIngredients })
            });

            const recipes = await response.json();
            const resultsDiv = document.getElementById('recipe-results');
            resultsDiv.innerHTML = '';

            if (recipes.length === 0) {
                resultsDiv.innerHTML = '<p>No matching recipes found.</p>';
            } else {
                recipes.forEach(recipe => {
                    const card = document.createElement('div');
                    card.className = 'recipe-card';
                    card.innerHTML = `
                        <a href="/recipe/${encodeURIComponent(recipe.recipe_name)}">
                            <img src="${recipe.image_path}" alt="${recipe.recipe_name}">
                            <h3 class="recipe-title">${recipe.recipe_name}</h3>
                        </a>
                    `;
                    resultsDiv.appendChild(card);
                });
            }
        }
